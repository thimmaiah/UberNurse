<table>
	
	<tr>
		<td><%= @shift.user.role %></td>
		<td>
			<%= @shift.user.first_name %> <%= @shift.user.last_name %>
		</td>
	</tr>

	<tr>
		<td>Phone</td>
		<td><%= @shift.user.phone %></td>
	</tr>

	<tr>
		<td>Care Home</td>
		<td><%= @shift.care_home.name %></td>
	</tr>

	<tr>
		<td>Care Home Phone</td>
		<td><%= @shift.care_home.phone %></td>
	</tr>

	<% if @shift.staffing_request.notes %>
		<tr>
			<td>Notes</td>
			<td>
				<%= @shift.staffing_request.notes %>
			</td>
		</tr>
	<% end %>

	<tr>
		<td>Address</td>
		<td>
			<%= @shift.care_home.address %>, 
			<%= @shift.care_home.postcode %>	
		</td>
	</tr>

	<% if @shift.start_date == nil %>
		<tr>
			<td>Start Time</td>
			<td><%= @shift.staffing_request.start_date.to_s(:custom_datetime) %></td>
		</tr>

		<tr>
			<td>End Time</td>
			<td><%= @shift.staffing_request.end_date.to_s(:custom_datetime) %></td>
		</tr>
	<% end %>

	<% if @shift.start_date %>
		<tr>
			<td>Shift Started At</td>
			<td><%= @shift.start_date.to_s(:custom_datetime) %></td>
		</tr>
	<% end %>

	<% if @shift.end_date %>
		<tr>
			<td>Shift Ended At</td>
			<td><%= @shift.end_date.to_s(:custom_datetime) if @shift.end_date %></td>
		</tr>
	<% end %>

	<% if @shift.carer_break_mins > 0 %>
		<tr>
			<td>Break</td>
			<td><%= @shift.carer_break_mins %> Minutes </td>
		</tr>
	<% end %>

	<tr>
		<td>Shift Id</td>
		<td><%= @shift.id %></td>
	</tr>
	<tr>
		<td>Request Id</td>
		<td><%= @shift.staffing_request.id %></td>
	</tr>
</table>